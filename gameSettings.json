{
    "Video Settings": {

        "resolution": {

            "name":"RESOLUTION",
            "type":"list",

            "listOptions": [
                { "name": "1600x720", "data": { "resX": 1600, "resY": 720 } },
                { "name": "1920x1080", "data": { "resX": 1920, "resY": 1080 } },
                { "name": "1440x2160", "data": { "resX": 1440, "resY": 2160 } }
            ],

            "ini":{

                "file":"HawkenSystemSettings",
                "section": "SystemSettings",
                "key": [ "resX", "resY" ]
            }
        },

        "fullscreen": {

            "name":"FULLSCREEN",
            "type":"toggle",

            "ini": {

                "file":"HawkenSystemSettings",
                "section": "SystemSettings",
                "key": "Fullscreen"
            }
        },

        "fpscap": {

            "name":"FRAMERATE CAP",
            "type":"slider",

            "max": 300.0,
            "min": 30.0,
            "step": 1,
            
            "ini": {

                "file":"HawkenEngine",
                "section": "Engine.Engine",
                "key": "MaxSmoothedFrameRate"
            }
        }


    },

    "Game Settings": {

        "mousesensitivity": {

            "name":"MOUSE SENSITIVITY",
            "type":"slider",
            "step": 1,
            "min": 0.0000,
            "max": 50.00000,

            "ini": {

                "file":"HawkenInput",
                "section": "Engine.PlayerInput",
                "key": "MouseSensitivity"
            }
        },

        "fov": {

            "name":"FIELD OF VIEW",
            "type":"slider",

            "min": 30.0,
            "max": 110.0,

            "step": 1,

            "ini": {

                "file":"HawkenGame",
                "section": "Robots.R_PlayerController_Base",
                "key": "FOV_Override"
            }
        },

        "cockpitlag": {

            "name":"COCKPIT LAG",
            "type":"slider",

            "min": 0.6,
            "max": 1.0,
            "step": 0.1,

            "ini": {

                "file":"HawkenGame",
                "section": "Robots.R_PlayerController_Base",
                "key": "CockpitLagFactor"
            }
        }

    },

    "Graphical Effects": {

        "motionblur": {

            "name":"MOTION BLUR",
            "type":"toggle",

            "value": true,

            "ini": {

                "file":"HawkenSystemSettings",
                "section": "SystemSettings",
                "key": "MotionBlur"
            }
        },

        "postfx": {

            "name":"POSTPROCESSING",
            "type":"toggle",

            "value": true,

            "ini": {

                "file":"HawkenSystemSettings",
                "section": "SystemSettings",
                "key": "DepthOfField"
            }
        }
    }
}